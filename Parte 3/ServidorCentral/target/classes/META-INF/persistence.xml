<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="EdExtPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Entidades.Categoria</class>
    <class>Entidades.Comentario</class>
    <class>Entidades.Curso</class>
    <class>Entidades.Estudiante</class>
    <class>Entidades.InscripcionEdicion</class>
    <class>Entidades.InscripcionPrograma</class>
    <class>Entidades.Instituto</class>
    <class>Entidades.Profesor</class>
    <class>Entidades.Usuario</class>
    <class>Entidades.Edicion</class>
    <class>Entidades.ProgramaFormacion</class>
    <class>Entidades.Valoracion</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/EdExt"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
